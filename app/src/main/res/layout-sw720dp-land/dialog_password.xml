<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:background="@drawable/select_language_background_white"
    android:elevation="2dp"
    >


    <ImageView
        android:id="@+id/imageview_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="?actionBarItemBackground"
        android:padding="10dp"
        android:src="@drawable/cross_black" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp">


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxLength="6"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />


        <EditText
            android:id="@+id/text_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/select_language_background_white"
            android:elevation="5dp"
            android:hint="Please enter password (Six Digit password)"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingHorizontal="10dp"
            android:text=""
            android:textColor="@color/colorBlack" />


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_input_edit_text"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_rounded_background"
            android:foreground="?actionBarItemBackground"
            android:gravity="center"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />

    </RelativeLayout>

</RelativeLayout>